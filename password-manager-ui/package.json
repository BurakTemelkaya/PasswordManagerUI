{
  "name": "password-manager-ui",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build --outDir dist && npm run release:extension",
    "build:web": "tsc -b && vite build --outDir dist",
    "build:extension": "tsc -b && vite build --mode extension --outDir dist-extension",
    "build:extension:prod": "tsc -b && vite build --mode extension --outDir dist-extension",
    "pack:extension": "cd dist-extension && powershell Remove-Item -Path public-extension -Recurse -Force -ErrorAction SilentlyContinue; powershell Compress-Archive -Force -Path * -DestinationPath ../public/password-manager-extension.zip && cd ..",
    "release:extension": "npm run build:extension:prod && npm run pack:extension",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.12.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.1.36",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
